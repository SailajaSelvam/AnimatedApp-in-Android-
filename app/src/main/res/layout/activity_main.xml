<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/header_gradient"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:elevation="8dp"
            android:layout_marginBottom="16dp">

            <!-- Main Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animated App"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#55000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="6dp"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interactive Fun with Animations!"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#FFD700"
                android:shadowColor="#33000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="4"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>


        <!-- Girl Image Card with Pop-up Overlay -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            android:layout_marginBottom="32dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Girl Image -->
                <ImageView
                    android:id="@+id/girlImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/girl1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Girl Image"/>

                <!-- Pop-up Text Above the Image -->
                <TextView
                    android:id="@+id/popUpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yay!"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/pop_up_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:elevation="12dp"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClick"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Click"
                app:cornerRadius="16dp"
                android:layout_margin="8dp"
                app:backgroundTint="#FF4081"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWave"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Wave"
                app:cornerRadius="16dp"
                android:layout_margin="8dp"
                app:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJump"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Jump"
                app:cornerRadius="16dp"
                android:layout_margin="8dp"
                app:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
